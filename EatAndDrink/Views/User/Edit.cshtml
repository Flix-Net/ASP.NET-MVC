@using Microsoft.AspNetCore.Identity
@model EatAndDrink.ViewModels.UserWithRoleViewModel

@{
    ViewData["Title"] = "Edit User Role";
    var roles = (List<IdentityRole>)ViewData["roles"];
}

<form asp-controller="User" asp-action="Update" asp-route-id="@Model.Id" asp-method="put">
    <label class="form-label" asp-for="Email"></label>:<input class="form-control" style="max-width:300px" asp-for="Email"/><br/>

    <div class="form-check">
        <label asp-for="EmailConfirmed" class="form-check-label"></label>:
        <input class="form-check-input" type="checkbox" id="flexCheckIndeterminate" asp-for="EmailConfirmed">
    </div>
    <br />
    <label class="form-label" asp-for="Role"></label>:
    <select class="form-select" asp-for="Role" asp-items='new SelectList(roles, "Name", "Name")' style="max-width:300px">
          <option></option>
    </select><br />



    <button style="width:148px" class="btn btn-outline-success">Update</button>
    <button style="width:148px" asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">Back</button>
</form>